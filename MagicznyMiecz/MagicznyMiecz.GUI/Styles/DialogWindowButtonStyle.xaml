<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="GameplayButtonStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="DialogWindowButtonStyle" BasedOn="{StaticResource GameplayButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="4,0,0,0" />
        <Setter Property="Width" Value="90" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
    
    
    <Style x:Key="DialogWindowControlStyle" TargetType="{x:Type Control}">
        
    </Style>

    <Style x:Key="DialogWindowLabelStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="10,4" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="DialogWindowRightControlStyle" BasedOn="{StaticResource DialogWindowControlStyle}" TargetType="{x:Type Control}">

    </Style>
</ResourceDictionary>