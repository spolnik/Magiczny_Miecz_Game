<UserControl x:Class="MagicznyMiecz.GUI.Views.CardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="{Binding Width}"
             Height="{Binding Height}">
    <Border Margin="1" BorderBrush="DarkBlue" BorderThickness="1" Padding="2">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        
        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Grid.Row="1" />

        <Image Margin="4" Source="{Binding ImageSource}" />
        
        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" HorizontalAlignment="Center" Grid.Row="3" />

    </Grid>
    </Border>
</UserControl>
